#!/usr/bin/env perl

use strict;
use warnings;
use 5.020;

our $VERSION = '0.00';

use File::Slurp qw(read_file);
use Net::MQTT::Simple;

my $mqtt   = Net::MQTT::Simple->new('172.23.225.193');
my $retain = 0;

sub parse_content_string {
	my ($raw_content) = @_;
	if ( $raw_content =~ m{ ^ / [^/] }x ) {
		my $content = read_file( $raw_content, { err_mode => 'carp' } );
		if ( defined $content ) {
			chomp $content;
		}
		return $content;
	}
	return $raw_content;
}

for my $arg (@ARGV) {
	if ( $arg eq '--publish' ) {
		$retain = 0;
	}
	elsif ( $arg eq '--retain' ) {
		$retain = 1;
	}
	elsif (
		$arg =~ m{ ^ (?<topic> [^=]+) = (?<msgtype> . ) = (?<content> .*) $ }x )
	{
		my $content = parse_content_string( $+{content} );
		if ($retain) {
			$mqtt->retain( $+{topic}, $content );
		}
		else {
			$mqtt->publish( $+{topic}, $content );
		}
	}
}

__END__

